{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tailwind: watch",
      "type": "shell",
      "command": "npm run tailwind:watch",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Vite: dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "Dev: Vite + Tailwind",
      "dependsOn": ["Tailwind: watch", "Vite: dev"],
      "dependsOrder": "parallel"
    }
  ]
}
